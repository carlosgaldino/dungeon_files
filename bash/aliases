# Dirs
alias h="cd ~"
alias o="open ."
alias code="cd ~/code"
alias dgn='cd ~/.dungeon_files'

# Config
alias reload='source ~/.bash_profile && echo "sourced ~/.bash_profile"'

# Shell
alias c='clear'
alias la='ls -alh'
alias cdd='cd -' # return to last directory
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias e=$EDITOR
alias grep='grep --color=auto'

# ls with colors
if ls --color -d . >/dev/null 2>&1; then
  alias ls='ls --color=auto'  # Linux
elif ls -G -d . >/dev/null 2>&1; then
  alias ls='ls -G'  # BSD/OS X
fi

# Git
alias gl="git log"
alias gs="git status"
alias gw="git show"
alias gd="git diff"  # What's changed but not yet added?
alias gdc="git diff --cached"  # What's added but not yet committed?
alias gc="git commit -a -m"
alias gco="git commit -m"  # "only"
alias gca="git add . && git commit -a -m"  # "all"
alias gp='git push'
alias gpl='git pull'
alias gpp='git pull && git push'
alias go="git checkout"
alias gb="git checkout -b"
alias got="git checkout -"
alias gom="git checkout master"
alias gr="git branch -d"
alias grr="git branch -D"
alias ptec="git config --local user.email carlos.galdino@plataformatec.com.br"
alias me="git config --local user.email carloshsgaldino@gmail.com"

# bundler
alias b="bundle"
alias bi="b install --binstubs=b --path vendor"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"
