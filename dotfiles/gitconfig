[user]
	name = Carlos Galdino
	email = carloshsgaldino@gmail.com
[color]
  ui = auto
[core]
	excludesfile = /Users/carlosgaldino/.gitignore
  editor = vim
  pager = delta --paging "always" --file-color="white" --minus-color="#ff5b56" --plus-color="#49c876" --plus-emph-color="#048045" # --plus-color="#5ad18d" --dark # --theme="GitHub" --light

[interactive]
  diffFilter = delta --color-only --file-color="white" --minus-color="#ff5b56" --plus-color="#49c876" --plus-emph-color="#048045"

[url "git@github.com:babylonpartners"]
  insteadOf = https://github.com/babylonpartners
[url "git@github.com:Babylonpartners"]
  insteadOf = https://github.com/Babylonpartners
[url "git@github.com:babylonhealth"]
  insteadOf = https://github.com/babylonhealth

[alias]
  st = status
  ci = commit -v
  co = checkout
  di = diff
  dc = diff --cached
  # di = "!sh -c 'git diff --color=always $@ | less -R' -"
  # dc = "!sh -c 'git diff --cached --color=always $@ | less -R' -"
  amend = commit --amend -v
  aa = add --all
  au = add -u
  ff = merge --ff-only
  noff = merge --no-ff --no-edit
  fix = commit --amend -C HEAD
  pom = push origin master
  clearbranches = "!sh -ec 'git checkout master; git branch --merged | grep -v master | xargs git branch -d; git checkout -' -"

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/bin/githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/bin/githelpers && pretty_git_log"
  la = !git l --all

  nuke = git-nuke

  showless = "!sh -c 'git show --color=always $@ | less -R' -"
[github]
	user = carlosgaldino
[push]
	default = simple
