[index]
  threads=false
[user]
	name = Carlos Galdino
	email = cgaldino@apple.com
[color]
  ui = auto
[core]
	excludesfile = /Users/carlosgaldino/.gitignore
  editor = vim
  pager = delta --paging 'always' --syntax-theme='Sublime Snazzy'
[interactive]
  diffFilter = delta --color-only
[commit]
  verbose = true
[alias]
  st = status
  ci = commit
  co = checkout
  cp = cherry-pick
  # di = diff
  # dc = diff --cached
  di = "!sh -c 'git diff --color=always $@ | less -R' -"
  dc = "!sh -c 'git diff --cached --color=always $@ | less -R' -"
  amend = commit --amend
  aa = add --all
  au = add -u
  ff = merge --ff-only
  noff = merge --no-ff --no-edit
  fix = commit --amend -C HEAD
  pom = push origin main
  clearbranches = "!sh -ec 'git checkout main; git branch --merged | grep -v main | xargs git branch -d; git checkout -' -"
  undo = reset HEAD~
  unstage = restore --staged

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/bin/githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/bin/githelpers && pretty_git_log"
  la = !git l --all

  nuke = git-nuke

  showless = "!sh -c 'git show --color=always $@ | less -R' -"
[github]
	user = carlosgaldino
[push]
	default = simple

